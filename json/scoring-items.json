[
  {
    "id": "score-hit",
    "name": "Score Hit",
    "description": "When prediction hit exact score",
    "expression": {
      "type": "and",
      "operands": [
        {
          "type": "eq",
          "operands": [
            {
              "type": "var",
              "dataType": "number",
              "value": "match.home.score"
            },
            {
              "type": "var",
              "dataType": "number",
              "value": "prediction.home.score"
            }
          ]
        },
        {
          "type": "eq",
          "operands": [
            {
              "type": "var",
              "dataType": "number",
              "value": "match.away.score"
            },
            {
              "type": "var",
              "dataType": "number",
              "value": "prediction.away.score"
            }
          ]
        }
      ]
    }
  },
  {
    "id": "score-diff-hit",
    "name": "Score Diff Hit",
    "description": "When prediction hits the winner (not draw) and hits score difference",
    "expression": {
      "type": "and",
      "operands": [
        {
          "type": "not",
          "expression": {
            "type": "eq",
            "operands": [
              {
                "type": "var",
                "dataType": "number",
                "value": "match.home.score"
              },
              {
                "type": "var",
                "dataType": "number",
                "value": "match.away.score"
              }
            ]
          }
        },
        {
          "type": "eq",
          "operands": [
            {
              "type": "subs",
              "operands": [
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "match.home.score"
                },
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "match.away.score"
                }
              ]
            },
            {
              "type": "subs",
              "operands": [
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "prediction.home.score"
                },
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "prediction.away.score"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  {
    "id": "winner-hit",
    "name": "Winner Hit",
    "description": "When prediction hit winner (or draw) but not score",
    "expression": {
      "type": "eq",
      "operands": [
        {
          "type": "clamp",
          "operands": [
            {
              "type": "subs",
              "operands": [
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "match.home.score"
                },
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "match.away.score"
                }
              ]
            },
            {
              "type": "const",
              "value": -1
            },
            {
              "type": "const",
              "value": 1
            }
          ]
        },
        {
          "type": "clamp",
          "operands": [
            {
              "type": "subs",
              "operands": [
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "prediction.home.score"
                },
                {
                  "type": "var",
                  "dataType": "number",
                  "value": "prediction.away.score"
                }
              ]
            },
            {
              "type": "const",
              "value": -1
            },
            {
              "type": "const",
              "value": 1
            }
          ]
        }
      ]
    }
  },
  {
    "id": "one-side-score-hit",
    "name": "One Side Score Hit",
    "description": "When prediction doesn't hit winner (or draw) but hits one side score",
    "expression": {
      "type": "or",
      "operands": [
        {
          "type": "eq",
          "operands": [
            {
              "type": "var",
              "dataType": "number",
              "value": "match.home.score"
            },
            {
              "type": "var",
              "dataType": "number",
              "value": "prediction.home.score"
            }
          ]
        },
        {
          "type": "eq",
          "operands": [
            {
              "type": "var",
              "dataType": "number",
              "value": "match.away.score"
            },
            {
              "type": "var",
              "dataType": "number",
              "value": "prediction.away.score"
            }
          ]
        }
      ]
    }
  }
]